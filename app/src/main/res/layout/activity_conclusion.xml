<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_save_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gameName"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="197dp"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Don't Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_btn"
            android:layout_below="@+id/start_btn"
            android:layout_alignStart="@+id/start_btn"
            android:layout_marginTop="16dp"
            android:layout_alignEnd="@+id/start_btn"
            android:onClick="cancelHandler" />

        <TextView
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:id="@+id/resultView"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center" />

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:id="@+id/start_btn"
            android:layout_below="@+id/gameName"
            android:layout_centerHorizontal="true"
            android:onClick="saveHandler" />
        <TextView
            android:text="Enter a name to save: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gameName"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="49dp"
            android:id="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

    <TextView
        android:text="Result "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gameName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/result"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="50dp" />
    </RelativeLayout>


